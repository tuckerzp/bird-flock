---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: birds-app-back-end-deployment
spec:
  replicas: 5
  revisionHistoryLimit: 3
  selector:
    matchLabels:
      app: birds-app-back-end-{{ username }}
  template:
    metadata:
      labels:
        app: birds-app-back-end-{{ username }}
    spec:
      containers:
        - image: 'ghcr.io/{{ username }}/birds-app-back-end:{{ version }}'
          name: birds-back-front-end
          ports:
            - containerPort: 8080
          resources:
            requests:
              memory: "32Mi"
              cpu: "250m"
            limits:
              memory: "128Mi"
              cpu: "500m"
